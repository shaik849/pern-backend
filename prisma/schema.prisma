generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Item {
  id          Int      @id @default(autoincrement()) // Auto-incremented primary key
  name        String  
  description String?  
  content     String?   

  createdAt   DateTime @default(now()) // Automatically set when the record is created
  updatedAt   DateTime @updatedAt      // Automatically update on any record update
}


